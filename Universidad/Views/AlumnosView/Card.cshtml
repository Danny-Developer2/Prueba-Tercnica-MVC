@model IEnumerable<Universidad.Models.Alumno>

<div class="container mt-4">
    <div class="row">
        @foreach (var alumno in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="https://png.pngtree.com/png-vector/20210604/ourmid/pngtree-gray-avatar-placeholder-png-image_3416697.jpg" alt="@alumno.Nombre" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@alumno.Nombre</h5>
                        <p class="card-text"><strong>Matrícula:</strong> @alumno.Matricula</p>
                        <p class="card-text"><strong>Correo:</strong> @alumno.Correo</p>
                        <p class="card-text"><strong>Carrera:</strong> @alumno.Carrera</p>
                        <p class="card-text"><strong>Promedio:</strong> @alumno.Promedio</p>
                        <p class="card-text"><strong>Edad:</strong> @((DateTime.Now.Year - alumno.FechaNacimiento.Year)) años</p>
                    </div>
                    <div class="card-footer text-muted">
                        @Html.ActionLink("Editar", "Edit", "AlumnosView", new { id = alumno.Id }, new { @class = "btn btn-primary btn-sm" }) 
                        @Html.ActionLink("Eliminar", "ConfirmDelete", "AlumnosView", new { id = alumno.Id }, new { @class = "btn btn-danger btn-sm" })

                    </div>
                </div>
            </div>
        }
    </div>
</div>

