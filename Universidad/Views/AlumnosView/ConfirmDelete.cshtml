@model Universidad.Models.Alumno

<div class="container mt-4">
    <h2>Confirmar Eliminación</h2>
    
    

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    
    <p>¿Estás seguro de que deseas eliminar a @Model.Nombre?</p>
    <form asp-action="Delete" asp-controller="AlumnosView" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a href="@Url.Action("Card", "AlumnosView")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
